<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Template</h1>
  <div class="col-6 offset-3">
    <form
      action="/templates/<%= template._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Template Title</label><br />
        <input
          class="form-control"
          type="text"
          id="title"
          name="template[title]"
          value="<%= template.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="category">Category</label>
        <select
          class="form-control"
          name="template[category]"
          id="category"
          required
        >
          <option value="General">General</option>
          <option value="Factura">Factura</option>
          <option value="Abonamente">Abonamente</option>
          <option value="Roaming">Roaming</option>
          <option value="My Orange">My Orange</option>
          <option value="Yoxo">Yoxo</option>
          <option value="Retea">Retea</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label" for="text">Template Text</label><br />
        <textarea
          class="form-control"
          name="template[text]"
          id="text"
          cols="30"
          rows="10"
          required
        >
          <%= template.text %>
        </textarea>
      </div>

      <button class="btn btn-success">Save Template</button>
      <a href="<%= backUrl %>" class="btn btn-danger">Cancel</a>
    </form>
  </div>
</div>
